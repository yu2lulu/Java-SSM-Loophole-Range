<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="it.ssm.dao.UserinfoDao">
    <select id="getUsers" resultType="it.ssm.domain.Userinfo">
        select * from Userinfo where 1
    </select>

    <select id="getUserById" resultType="it.ssm.domain.Userinfo">
        select * from Userinfo where id = ${id}
    </select>
</mapper>